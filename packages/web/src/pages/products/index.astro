---
import TagList from "../../features/blog/components/tag-list.astro";
import Layout from "../../layouts/main-layout/main-layout.astro";

const products = [
  {
    name: "はるさめ.dev",
    url: "https://harusame.dev",
    description:
      "技術とかその他諸々のメモブログです。備忘録的に色々書いています。",
    tags: [
      { id: "astro", name: "Astro" },
      { id: "react", name: "React" },
      { id: "typescript", name: "TypeScript" },
      { id: "taildindcss", name: "Tailwind CSS" },
      { id: "shadcn", name: "shadcn/ui" },
      { id: "cloudflare-workers", name: "Cloudflare Workers" },
      { id: "cloudflare-pages", name: "Cloudflare Pages" },
      { id: "microcms", name: "microCMS" },
    ],
  },
  {
    name: "honey Portion Poker",
    url: "https://honey-portion-poker.harusame.dev",
    description:
      "オンラインで効率的なタスク見積もりを実現するプラニングポーカーサービスです。登録不要で 1 Click で専用の URL を発行でき、 URL をチームに共有することですぐに見積もりを開始できます。リアルタイムでチーム全員の意見が反映されるため、距離を感じることなく一緒に作業を進められます。 URL は最終アクセスから 30 日間有効なため、毎回 URL を発行する手間がなく、設定を保存できるため URL をお気に入りに登録するだけですぐに見積もりを再開できます。",
    tags: [
      { id: "nextjs", name: "Next.js" },
      { id: "typescript", name: "TypeScript" },
      { id: "tailwindcss", name: "Tailwind CSS" },
      { id: "shadcn", name: "shadcn/ui" },
      { id: "eslint", name: "ESLint" },
      { id: "vercel", name: "Vercel" },
      { id: "supabase", name: "Supabase" },
    ],
  },
];
---

<Layout title="プロダクト">
  <ul class="space-y-8">
    {
      products.map(({ name, url, description, tags }) => (
        <li>
          <h2 class="mb-1 font-bold">
            <a href={url} class="underline">
              {name}
            </a>
          </h2>
          <div class="rounded-md bg-muted p-4">
            <p class="text-sm mb-4">{description}</p>
            <TagList tags={tags} />
          </div>
        </li>
      ))
    }
  </ul>
</Layout>
